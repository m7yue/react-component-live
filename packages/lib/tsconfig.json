{
  "compilerOptions": {
    "target": "ES5",

    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "module": "CommonJS",
    "rootDir": "src/",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "resolveJsonModule": true,

    "skipLibCheck": true,

    "allowJs": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",

    "isolatedModules": true,
    "esModuleInterop": true,

		"allowSyntheticDefaultImports": true,

    "jsx": "react",

    "strict": true
  },
  "include": ["./src"]
}
